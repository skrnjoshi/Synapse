# Production Environment Variables
# Copy this file to .env.production for production deployment

# MongoDB Connection (Production)
MONGO_URI=your_production_mongodb_connection_string_here

# JWT Secret (MUST be different and stronger for production)
JWT_SECRET=your_very_strong_production_jwt_secret_here

# GitHub OAuth (Production)
GITHUB_CLIENT_ID=your_production_github_client_id_here
GITHUB_SECRET=your_production_github_secret_here

# Port (will be set by hosting platform, but default fallback)
PORT=5001

# Node Environment
NODE_ENV=production
